<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wips.wips.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <Button
        android:text="STOP"
        android:id="@+id/endButton"
        android:background="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:layout_width="160dp"
        android:layout_alignBottom="@+id/startButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="500dp"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:maxLines="200000"
        tools:scrollbars="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/background_light"
        android:layout_height="275dp" />

    <Button
        android:text="SCAN"
        android:id="@+id/startButton"
        android:background="@android:color/holo_green_dark"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:layout_width="160dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <Button
        android:text="TRAIN"
        android:layout_width="wrap_content"
        android:id="@+id/trainButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_height="50dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:background="@android:color/holo_green_dark"
        android:layout_below="@+id/startButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/startButton"
        android:layout_alignEnd="@+id/startButton" />

    <Button
        android:text="LOCATE"
        android:layout_width="wrap_content"
        android:id="@+id/locateButton"
        android:layout_height="50dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:background="@android:color/holo_green_dark"
        android:layout_alignTop="@+id/trainButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/endButton"
        android:layout_alignStart="@+id/endButton" />

</RelativeLayout>
